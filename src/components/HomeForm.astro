<!-- Request Form Section -->
<section class="py-16">
	<div class="container mx-auto">
		<div class="text-center">
			<h2 class="mb-4 text-2xl font-bold">Request Blog Ideas</h2>
			<p class="mb-8 text-lg">Have a topic in mind? Share it with us!</p>
		</div>
		<div class="mx-auto max-w-lg">
			<form action="#" method="POST" class="grid grid-cols-1 gap-6">
				<div>
					<label for="name" class="block text-sm font-medium text-gray-700">Your Name</label>
					<input
						type="text"
						name="name"
						id="name"
						class="focus:ring-deep-blue focus:border-deep-blue mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm"
					/>
				</div>
				<div>
					<label for="email" class="block text-sm font-medium text-gray-700">Email Address</label>
					<input
						type="email"
						name="email"
						id="email"
						autocomplete="email"
						class="focus:ring-deep-blue focus:border-deep-blue mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm"
					/>
				</div>
				<div>
					<label for="idea" class="block text-sm font-medium text-gray-700">Blog Idea</label>
					<textarea
						id="idea"
						name="idea"
						rows="3"
						class="focus:ring-deep-blue focus:border-deep-blue mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm"
					></textarea>
				</div>
				<div>
					<button
						type="submit"
						class="bg-deep-blue inline-block rounded-full px-6 py-2 font-bold text-white hover:bg-blue-700"
						>Submit</button
					>
				</div>
			</form>
		</div>
	</div>
</section>
